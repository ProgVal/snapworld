master  localhost:8088
#hosts   ilc01,ilc02,ilc03,ilc04,ilc05,ilc06,ilc07,ilc08,ilc09,ilc10
#hosts   localhost:9100,localhost:9101,localhost:9102
hosts   localhost:9100

var     nodes           7,000
var     range           300
var     stat_tasks      10
var     gen_tasks       24

# TODO 'range' is not very intuitive, does it apply to a process input or output
# see if two output ports are handled correctly

bunch   GenTasks        size    1               range   $range
bunch   GenStubs        size    $gen_tasks      range   1
bunch   GenGraph        size    $gen_tasks      range   $range
bunch   GetNbr          size    $gen_tasks      range   1
bunch   GetDist         size    $stat_tasks     range   $range

route   __Start__       GenTasks
route   GenTasks        GenStubs
route   GenStubs        GenGraph
route   GenGraph:1      GetNbr
route   GenGraph:2      GetDist
route   GetNbr          GetDist
route   GetDist         GetNbr
#route   GetDist:1       GetNbr
#route   GetDist:2       Finish

